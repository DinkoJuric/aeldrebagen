{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        /* Mixed JS/TS Support */
        "allowJs": true,
        "checkJs": false // Don't type-check JS files, only TS files
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/test/**/*"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}