rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is member of a circle
    // Note: This function is duplicated from firestore.rules because they are not shared.
    function isMemberOfCircle(circleId) {
      // Assumes the project's default database.
      return exists(/databases/(default)/documents/careCircleMemberships/$(circleId + '_' + request.auth.uid));
    }

    // Care circle photos - members can read/write
    match /careCircles/{circleId}/photos/{fileName} {
      allow read, write: if request.auth != null && isMemberOfCircle(circleId);
    }
    
    // Care circle settings (reward photos, etc.)
    match /careCircles/{circleId}/settings/{fileName} {
      allow read, write: if request.auth != null && isMemberOfCircle(circleId);
    }
  }
}
