rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Care circles - members can read, creator can manage
    match /careCircles/{circleId} {
      allow read: if request.auth != null && isMemberOfCircle(circleId);
      allow create: if request.auth != null && request.resource.data.seniorId == request.auth.uid;
      allow update, delete: if request.auth != null && 
        resource.data.seniorId == request.auth.uid;
      
      // Settings subcollection
      match /settings/{settingId} {
        allow read, write: if request.auth != null && isMemberOfCircle(circleId);
      }
      
      // Tasks subcollection
      match /tasks/{taskId} {
        allow read, write: if request.auth != null && isMemberOfCircle(circleId);
      }
      
      // Symptoms subcollection
      match /symptoms/{symptomId} {
        allow read, write: if request.auth != null && isMemberOfCircle(circleId);
      }
      
      // Pings subcollection
      match /pings/{pingId} {
        allow read, write: if request.auth != null && isMemberOfCircle(circleId);
      }
      
      // Weekly answers subcollection
      match /weeklyAnswers/{answerId} {
        allow read, write: if request.auth != null && isMemberOfCircle(circleId);
      }
      
      // Help offers/requests subcollections
      match /helpOffers/{offerId} {
        allow read, write: if request.auth != null && isMemberOfCircle(circleId);
      }
      
      match /helpRequests/{requestId} {
        allow read, write: if request.auth != null && isMemberOfCircle(circleId);
      }

      // Member Statuses subcollection (Critical for FamilyPresence)
      match /memberStatuses/{statusId} {
        allow read, write: if request.auth != null && isMemberOfCircle(circleId);
      }

      // Photos subcollection
      match /photos/{photoId} {
        allow read, write: if request.auth != null && isMemberOfCircle(circleId);
      }

      // Word Game Scores subcollection (Leaderboard)
      match /wordGameScores/{scoreId} {
        allow read, write: if request.auth != null && isMemberOfCircle(circleId);
      }

      // Memories (Livsbog) subcollection
      match /memories/{memoryId} {
        allow read, write: if request.auth != null && isMemberOfCircle(circleId);
      }
    }
    
    // Care circle memberships - authenticated users can read if they are the member or share the circle
    match /careCircleMemberships/{membershipId} {
      allow read: if request.auth != null && (
        membershipId.split('_')[1] == request.auth.uid ||
        isMemberOfCircle(membershipId.split('_')[0]) ||
        isAdmin()
      );
      // Users can only write (create/update/delete) their own membership doc, or if they are an admin
      allow write: if request.auth != null && (membershipId.split('_')[1] == request.auth.uid || isAdmin());
    }
    
    // Helper function to check if user is member of a circle
    function isMemberOfCircle(circleId) {
      return exists(/databases/$(database)/documents/careCircleMemberships/$(circleId + '_' + request.auth.uid));
    }

    // Helper function to check if user is an admin
    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
  }
}
