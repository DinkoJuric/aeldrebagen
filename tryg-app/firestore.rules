rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Care circles - creator can manage, members can read
    match /careCircles/{circleId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        get(/databases/$(database)/documents/careCircles/$(circleId)).data.seniorId == request.auth.uid;
      
      // Settings subcollection
      match /settings/{settingId} {
        allow read, write: if request.auth != null && isMemberOfCircle(circleId);
      }
      
      // Tasks subcollection
      match /tasks/{taskId} {
        allow read, write: if request.auth != null && isMemberOfCircle(circleId);
      }
      
      // Symptoms subcollection
      match /symptoms/{symptomId} {
        allow read, write: if request.auth != null && isMemberOfCircle(circleId);
      }
      
      // Pings subcollection
      match /pings/{pingId} {
        allow read, write: if request.auth != null && isMemberOfCircle(circleId);
      }
      
      // Weekly answers subcollection
      match /weeklyAnswers/{answerId} {
        allow read, write: if request.auth != null && isMemberOfCircle(circleId);
      }
      
      // Help offers/requests subcollections
      match /helpOffers/{offerId} {
        allow read, write: if request.auth != null && isMemberOfCircle(circleId);
      }
      
      match /helpRequests/{requestId} {
        allow read, write: if request.auth != null && isMemberOfCircle(circleId);
      }

      // Member Statuses subcollection (Critical for FamilyPresence)
      match /memberStatuses/{statusId} {
        allow read, write: if request.auth != null && isMemberOfCircle(circleId);
      }

      // Photos subcollection
      match /photos/{photoId} {
        allow read, write: if request.auth != null && isMemberOfCircle(circleId);
      }

      // Word Game Scores subcollection (Leaderboard)
      match /wordGameScores/{scoreId} {
        allow read, write: if request.auth != null && isMemberOfCircle(circleId);
      }

      // Memories (Livsbog) subcollection
      match /memories/{memoryId} {
        allow read, write: if request.auth != null && isMemberOfCircle(circleId);
      }
    }
    
    // Care circle memberships - users can read all to find their circle
    // Admin (dinko1991@hotmail.com) can update any member for POC demo setup
    match /careCircleMemberships/{membershipId} {
      allow read, write: if request.auth != null;
    }
    
    // Helper function to check if user is member of a circle
    function isMemberOfCircle(circleId) {
      return exists(/databases/$(database)/documents/careCircleMemberships/$(circleId + '_' + request.auth.uid));
    }
  }
}
